mixin videoPlayer(video= {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-down
                span
                    span#currentTime 00:00:00 
                    span    /   
                    span#totalTime 00:00:00
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                input.videoPlayer__play#jsSetPlaytime(type="range", min="0", max="1", step="0.05", value="0")
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand